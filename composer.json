{
    "name": "hardcastle/ledger-direct-sw6",
    "description": "LedgerDirect - Shopware6 Ledger & Blockchain Connector",
    "version": "0.7.0",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "extra": {
        "shopware-plugin-class": "LedgerDirect\\LedgerDirect",
        "author": "Hardcastel Technologies / Alexander Busse",
        "label": {
            "de-DE": "LedgerDirect",
            "en-GB": "LedgerDirect"
        }
    },
    "require": {
        "php": ">= 8.1",
        "hardcastle/xrpl_php": ">=v0.7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12.18",
        "shopware/core": "~v6.4.0",
        "shopware/storefront": "~v6.4.0"
    },
    "autoload": {
        "psr-4": {
            "LedgerDirect\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LedgerDirect\\Tests\\": "tests/"
        }
    }
}
